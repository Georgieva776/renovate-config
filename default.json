{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["main"],
  "enabledManagers": ["npm", "github-actions"],
  "fetchChangeLogs": "off",
  "internalChecksFilter": "strict",
  "prHourlyLimit": 0,
  "branchConcurrentLimit": 2,
  "prConcurrentLimit": 2,
  "labels": ["renovate"],
  "rebaseWhen": "auto",
  "automerge": false,
  "recreateWhen": "always",
  "platform": "github",
  "autoApprove": true,
  "separateMajorMinor": false,
  "separateMinorPatch": false,
  "dependencyDashboard": false,
  "dependencyDashboardApproval": false,
  "rangeStrategy": "pin",
  "branchPrefix": "renovate/",
  "timezone": "Europe/Moscow",
  "onboarding": false,
  "allowCustomCrateRegistries": true,
  "allowScripts": true,
  "exposeAllEnv": true,
  "requireConfig": "optional",
  "digest": {
    "enabled": false
  },
  "pinDigests": false,
  "cloneSubmodules": true,
  "includePaths": ["./package.json", "**/package.json", "!node_modules/**"],
  "suppressNotifications": ["configErrorIssue", "deprecationWarningIssues"],
  "prBodyTemplate": "{{{table}}}{{{notes}}}{{{changelogs}}}{{{controls}}}{{{footer}}}",
  "prBodyColumns": ["Package", "Type", "Change"],
  "allowedPostUpgradeCommands": [".*"],
  "allowPostUpgradeCommandTemplating": true,
  "packageRules": [
    {
      "matchCurrentAge": "> 2 years",
      "groupName": "old dependencies"
    },
    {
      "rangeStrategy": "pin",
      "matchPackagePatterns": ["*"]
    },
    {
      "rangeStrategy": "widen",
      "matchDepTypes": ["engines", "peerDependencies"]
    },
    {
      "enabled": false,
      "matchDepTypes": ["engines"]
    },
    {
      "enabled": false,
      "matchUpdateTypes": ["major"]
    },
    {
      "enabled": false,
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackagePatterns": ["highlight.js"]
    },
    {
      "enabled": false,
      "matchUpdateTypes": ["major", "minor"],
      "matchPackagePatterns": ["typescript"]
    },
    {
      "enabled": false,
      "matchUpdateTypes": ["major", "minor"],
      "matchPackagePatterns": ["zone.js", "rxjs"]
    },
    {
      "enabled": true,
      "labels": ["renovate"]
    },
    {
      "enabled": true,
      "groupName": "GitHub Actions",
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackagePatterns": ["^actions/.*", "^actions/.*"]
    },
    {
      "enabled": false,
      "matchUpdateTypes": ["major"],
      "matchPackagePatterns": [
        "^actions/upload-artifact",
        "^actions/download-artifact"
      ]
    },
    {
      "groupName": "ng",
      "matchPackagePatterns": [
        "^@angular.*",
        "^@nguniversal.*",
        "ng-packagr",
        "zone.js",
        "rxjs"
      ]
    },
    {
      "groupName": "ng-web-apis",
      "matchPackagePatterns": ["^@ng-web-apis/.*"]
    },
    {
      "groupName": "taiga-ui",
      "matchPackagePatterns": ["^@taiga-ui/.*"]
    },
    {
      "enabled": true,
      "groupName": "tiptap",
      "matchPackagePatterns": ["^@tiptap/.*"],
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "enabled": true,
      "groupName": "cspell",
      "matchPackagePatterns": ["^@cspell/.*"],
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "groupName": "prosemirror",
      "matchPackagePatterns": ["^prosemirror.*"]
    },
    {
      "enabled": true,
      "groupName": "definitely typed",
      "matchPackagePatterns": ["^@types/.*"],
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "enabled": true,
      "groupName": "prettier",
      "matchPackagePatterns": ["^prettier", "^@prettier/.*", "$^prettier-.*"],
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "enabled": true,
      "groupName": "nx",
      "matchPackagePatterns": ["^@nrwl/.*", "^@nx/.*", "nx-cloud", "^nx$"],
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "enabled": true,
      "groupName": "cypress",
      "matchPackagePatterns": [
        "cypress",
        "cy2",
        "@types/cypress-image-snapshot",
        "cypress-image-snapshot"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "enabled": true,
      "groupName": "commitlint",
      "matchPackagePatterns": ["^@commitlint/.*"],
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "groupName": "tinkoff",
      "matchPackagePatterns": ["^@tinkoff/.*"]
    },
    {
      "groupName": "maskito",
      "matchPackagePatterns": ["^@maskito/.*"]
    },
    {
      "enabled": true,
      "groupName": "rollup",
      "matchPackagePatterns": ["^rollup.*", "@rollup/pluginutils"],
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "enabled": true,
      "groupName": "types",
      "matchPackagePatterns": ["^@types/.*"],
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "enabled": true,
      "groupName": "stackblitz sdk",
      "matchPackagePatterns": ["^@stackblitz/.*"],
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "enabled": true,
      "groupName": "eslint",
      "matchPackagePatterns": [
        "^eslint.*",
        "^@types/eslint.*",
        "^@angular-eslint/.*",
        "^@html-eslint/.*",
        "^@babel/eslint-.*",
        "^@typescript-eslint/.*"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "enabled": true,
      "groupName": "jest",
      "matchPackagePatterns": [
        "^@types/jest$",
        "^@types/jsdom$",
        "^jest.*",
        "^ts-jest$",
        "^jest-preset-angular$"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "enabled": true,
      "groupName": "jasmine",
      "matchPackagePatterns": ["^jasmine.*"],
      "matchUpdateTypes": ["major", "minor", "patch"]
    }
  ]
}
